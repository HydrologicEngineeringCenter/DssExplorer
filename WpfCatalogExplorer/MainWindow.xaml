<Window x:Class="WpfCatalogExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCatalogExplorer"
        mc:Ignorable="d"
        DataContext="{Binding DSSTable}"
        Title="DSS Catalog Explorer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="419"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File" Height="19" Width="60">
                <MenuItem Header="Open..." Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,19,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="383"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dataGrid" ItemsSource="{Binding Path=DataTable}" Margin="0,0,0,-16" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.ContextMenu>
                    <ContextMenu StaysOpen="False">
                        <MenuItem Header="Edit TimeSeries" Click="EditTimeSeries"/>
                        <MenuItem Header="View TimeSeries" Click="ViewTimeSeries"/>
                        <MenuItem Header="Insert TimeSeries" Click="InsertTimeSeries"/>
                        <MenuItem Header="Remove TimeSeries" Click="RemoveTimeSeries"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <!--<local:GridDisplay x:Name="grid1"  Margin="0,19,0,0"  />-->
        </Grid>


    </Grid>
</Window>
