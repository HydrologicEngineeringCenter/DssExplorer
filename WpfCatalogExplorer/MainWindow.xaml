<Window x:Class="WpfCatalogExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCatalogExplorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:GridDisplay x:Name="grid1" Loaded="Grid1_Loaded" Margin="0,19,0,0"  />
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File" Height="19" Width="60">
                <MenuItem Header="Open..." IsEnabled="True" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
